    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "latest"
  },
  "name": "xi.app",
  "packageManager": "npm@9.1.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
