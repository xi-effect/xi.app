    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@turbo/gen": "^1.9.7",
    "@xipkg/eslint": "1.4.0",
    "eslint": "^8.57.0",
