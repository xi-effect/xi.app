{
  "private": true,
  "scripts": {
    "build": "turbo run build --no-daemon",
    "dev": "turbo run dev --concurrency 30",
    "lint": "turbo run lint -- && node -e \"console.log('script started at: %s', Date())\"",
    "lint-fix": "turbo run lint -- --fix .",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format-check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@turbo/gen": "^1.9.7",
    "@xipkg/eslint": "1.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "latest"
  },
  "name": "xi.app",
  "packageManager": "npm@9.1.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "./package.json": ["npm run lint --"]
  }
}
