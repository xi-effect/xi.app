    "husky": "^9.1.6",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "turbo": "2.0.5"
  },
  "name": "xi.app",
  "packageManager": "npm@9.1.2",
